<h1>Upstairs Profile</h1>

<h2>My Communities</h2>

<% @user.communities.each do |community|-%>
   <strong><%= link_to community.address, community_path(community) -%></strong>
    <% if current_user.member_of?(community)%>
       <small><%= link_to 'leave', 
		  community_membership_path(community, community.membership(current_user)), 
		  method: :delete, confirm: "Are your sure that you want to leave this coummnity?" -%></small>
  <% end %>
<% end %>

<br />

<h2>Choose how your neighbors will see you.</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, "Current Username" %>(This can be your real name or any username you choose.)<br />
    <%= f.text_field :username, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Picture (Optional)" %><br />
    <%= f.attachinary_file_field :avatar %>
  </div>
  <br />
  <div class="field">
    <strong>Email: <%= resource.email -%>  </strong>
    <%= f.label :email, "Change Email: ", placeholder: "Enter your new email address..." %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password,  "Revise Password" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Whatâ€™s your new password?" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter your new password again." %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Enter your current password..." %>
  </div>


  <div class="field">
    <%= f.label :use_my_username, "Check this box if you would like to use your user name when posting and commenting. Uncheck this box if you would like to be anonymous." %>
    <%= f.check_box :use_my_username %>
  </div>


  <div class="field">
    <%= f.label :phone ,"(Optional): Check this box if you give Upstairs permission to send you text messages" %>
    <%= f.text_field :phone , autocomplete: "on", placeholder: "Enter your phone # here" %>
  </div>

  <div class="field">
    <%= f.label :ok_to_send_text_messages, "Check this box if you give Upstairs permission to send you text messages"%>
    <%= f.check_box :ok_to_send_text_messages %>
  </div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<br />

