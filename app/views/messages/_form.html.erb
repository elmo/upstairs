<%= simple_form_for([@community, @message]) do |f| %>

  <%= f.hidden_field :messageble_type -%>
  <%= f.hidden_field :messageble_id -%>
  <%= f.hidden_field :recipient_id -%>
  <%= f.hidden_field :community_id , @community.-%>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
