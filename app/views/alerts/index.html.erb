<h3>Alerts</h3>
<div class="content-posts">
<!--%= render partial: 'form' -%-->
<% if @alerts.any? %>
    <div class="alertList">
    <% @alerts.each do |alert| %>
      <div class="note alert_fiche">
        <!--%= link_to alert.message, building_alert_path(@building, alert) %><br /-->
          <div class="header_fiche">    
              <div class="colorAlert"></div>
                <div class="photo" style="<%= show_user_bg(alert.user, 'large', 'fit') %>"></div>
                <div class="user-name"><%= link_to username_or_anonymous(alert.user), building_user_path(@building, alert.user.slug) -%></div>
                
            </div>
            <div class="post-text" >
              <%= truncate(alert.message, length: 25, omission: '... (continued)' ) -%> 
                <% if alert.owned_by?(current_user) %>
                    <%= link_to 'edit', edit_building_alert_path(@building, alert) -%>
                  <% end %>
             </div>
          
          
       </div>
    </div>
    <% end %>
<%= paginate(@alerts) -%>
<% else %>
  <% if params[:searchTextField].present? %>
    <p>There are no alerts matching your query.</p>
  <% else %>
    <p>There are no alerts for this building.</p>
  <% end %>
<% end %>
</div>
