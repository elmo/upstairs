<h1>Bulletin Board</h1>

<h2>Notes</h2>

<% if @posts.empty? %>
<p> There are no posts <%= (@category.present?) ? " within category #{@category.name}" : "" -%>. </p>
<% else %>

<% @posts.each do |post| %>
  <%= render partial: '/posts/post', locals: { post: post }  -%>
<% end %>

<%= paginate(@posts) -%>

<% end %>

<br />
<p>
<%= link_to 'add a new post', new_building_post_path(@building) %>
</p>
