<div class="type-system-geometric">
<h1><%= post.title -%></h1>
<%= by_line(post) -%>
<%= link_to 'edit', edit_community_post_path(post.postable, post ) -%>
<div class="post-body typ">
<% if post.photos.any? %>
<span class="post-image"> <%= cl_image_tag(post.photos.first.path, { size: '300x500', crop: :fit }) %> </span>
<% end %>
<%= post.body  -%>
<br clear="both">
<%= render partial: '/comments/comments', locals: { commentable: post}  %>
</div>
</div>

