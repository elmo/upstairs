<div class="note<%= i % 1 == 0 ? '_pair' : ''  -%>">
      <%= image_tag"onglet_1.png", id: "onglet" %>
      <div id="category_color"></div>
      <%= image_tag"shadow.png", class: "shadow" %>
      <%= image_tag"photo.png" , id: "photo" %>
    <div class="post_text">   
      <div class="header_post">
          <div class="category" >
	     <%= post.category.name -%> 
          </div>
          <div class="title" >
	    <%= link_to post.title, building_post_path(@building, post ) -%> 
          </div>
      </div>
      <div class="post-text" >
	<%= truncate(post.body, length: 35, omission: '... (continued)' ) -%> 
      </div>
      <div class="info_post">
          <div class="user-name" >
	     <%= truncate(post.user.username, length: 6, omission: '...') -%> 
          </div>
          <div class="_days_ago_" >    
	    <%= time_ago_in_words(post.created_at) -%> ago.
          </div>
      </div>
    </div> 
</div>
