<div id="header"  >
    <div id="rectangle_8"  ></div>
    
    <nav id="nav" role="navigation" class="filters">
        <a href="#nav" title="Show navigation">Show navigation</a>
        <a href="#" title="Hide navigation">Hide navigation</a>
        <ul class="accordion">
            
            <li>
                <a href="javascript:void(0)" class="js-accordion-trigger">
                    <div id="filters_title" >Filters</div>
                     <div id="arrow" >T</div>
                </a>
                <ul class="submenu">
                 <% Category.all.each do |category| %>
                   <li id="category_#{category.id}">
                       <%= link_to category.name, params.merge(c: category.slug) -%> 
                   </li>
                    <% end %>
                    <li>
                        <%= link_to 'clear categories', building_posts_url(@building)-%> 
                    </li>
                </ul> 
            </li>
           <li>
                
                <ul class="add_menu submenu ">
                   <li >
                       <%= link_to new_building_user_invitation_path(@building) do
                            content_tag(:div,  'N' , id: 'icon_7', class: 'icon_menu') +
                            content_tag(:div, I18n.t(:invite_someone), id: 'invite_someone', class: 'menu_item_text_add')
                          end-%> 
                   </li>
                    <li >
                       <%= link_to new_building_ticket_path(@building) do
                            content_tag(:div, 'L' , id: 'icon_5', class: 'icon_menu') +
                            content_tag(:div, I18n.t(:tickets), id: 'request_a_repair', class: 'menu_item_text_add')
                            end
                        -%> 
                   </li>
                    <li >
                       <%= link_to new_building_alert_path(@building) do
                            content_tag(:div, 'F' , id: 'icon_5', class: 'icon_menu') +
                            content_tag(:div, 'Post an alert', id: 'icon', class: 'menu_item_text_add')
                            end-%> 
                   </li>
                    <li >
                       <%= link_to new_building_message_path(@building) do 
                        content_tag(:div, 'H' , id: 'icon_5', class: 'icon_menu') +
