                         end -%> 
                   </li>
                </ul> 
               <a href="javascript:void(0)" class="js-accordion-trigger">
                    <div id="add"  >
                        <%= image_tag"icon_plus.png", id: "icon_plus" %>
                    </div>
                </a>
            </li>
        </ul>
        
    </nav>
    <div id="rectangle_2"  ></div>
    
    <div id="searchC"  >
        <%= form_tag building_posts_path(@building), method: :get  do %>
        <%= submit_tag 's', id: 'search' %>
        <%= text_field_tag :searchTextField %>
        <% end %>
    </div>
    <div id="rectangle_2"  ></div>
