<h1>Listing Units for <%= @building.address -%></h1>

<% if @units.empty? %>
<% else  %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.user_id %></td>
        <td><%= link_to 'details', building_unit_path(@building,unit) %></td>
        <td><%= link_to 'Edit', edit_building_unit_path(@building, unit) %></td>
	<td><%= link_to 'Destroy', building_unit_path(@building,unit), 
		  method: :delete, 
		  data: { confirm: 'Are you sure?' } %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate(@units) %>

<% end %>
<br>

<%= link_to 'Enter a New Unit', new_building_unit_path(@building) %>
