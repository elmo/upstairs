<%= simple_form_for([:manage, @ticket, @assignment]) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :ticket_id %>
    <%= f.input :assigned_to, collection: @ticket.candidate_assignees.collect {|u| [u.email, u.id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
