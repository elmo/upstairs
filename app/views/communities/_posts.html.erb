<% if @posts.empty? %>
<p>There are no notes for this community.<p>
<% else %>
<% @posts.each do |post|%>
  <post>
  <div class="type-system-geometric">
  <h3> <%= link_to post.title , community_post_path(@community, post) -%> </h3> 
  <%= by_line(post)-%>
  <div class="post-body-thumb">
  <% if false and post.photos.any? -%>
    <span class="post-image">
    <%= cl_image_tag(post.photos.first.path, { size: '175x175', crop: :fit }) %>
    </span>
  <% end %>
  <%= post.words(Community::HOMEPAGE_WORD_MAX) -%>
  <%= link_to 'continue reading...', community_post_path(@community, post)   %>
  </div>
  </div>
  </post>
  <% end %>
<% end %>
<%= paginate(@posts) -%>
