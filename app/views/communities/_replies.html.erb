<%= pluralize(comment.replies.count, 'reply' ) -%>
<% if comment.replies.any?  %>
  <% comment.replies.each do |reply| %>
   <p><%= reply.body -%></p> 
   by <%= reply.user.email -%> @ <%= reply.created_at.strftime(upstairs_time_format) -%>
  <% end %>
<% end %>

<p><%= link_to 'reply', new_comment_reply_path(comment) -%></p>
