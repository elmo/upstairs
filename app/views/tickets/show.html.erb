<ticket>

<left>
<h2>Ticket #<%= @ticket.id -%></h2>

<h3><%= @ticket.title %></h3>
<p> <%= @ticket.body %> </p>
<p> <strong> <%= @ticket.severity %> </strong> </p>

<p>
  <strong>Status:</strong>
  <%= @ticket.status %>
</p>

</left>
<right>

<% @ticket.photos.each do |photo| %>
   <%= cl_image_tag(photo.path, { size: '200x300', crop: :fit }) %>
<% end %>

<p>
<%= link_to 'back to community' , community_path(@community) -%>
</p>
</right>

<br />
<comments>

<%= link_to 'comment', new_ticket_comment_path(@ticket) -%>

<%= render partial: '/communities/comments', locals: {commentable: @ticket}  %>
</comments>

</ticket>
