<h1 class="inline">Community Event </h1>
<small> <%= link_to 'calendar', calendar_path(@community) %> </small>
<br clear="all">
<h2 class="inline"><%= @event.title %></h2>
<% if @event.owned_by?(current_user) %>
  <small>posted by <%= link_to @event.user.public_name, community_user_path(@community, @event.user ) %> <%= @event.created_at.strftime(upstairs_time_format) -%></small> 
  <small><%= link_to 'Edit', edit_community_event_path(@community, @event) %></small> 
  <p><%= link_to 'send message to organizer', new_community_user_message_path(@community, @event.user) %></p> 
<% end %>

<div class="event">
<p><strong>Event starts:</strong> <%= @event.starts.strftime("%B %d, %Y") %></p>

<% if @event.photos.any? %>
<br clear="all">
<%= cl_image_tag(@event.photos.first.path, { size: '300x500', crop: :fit }) %>
<br clear="all">
<% end %>

<%= @event.body %>
<br class="inline">
<div id="comments">
<h3 class="inline">Comments</h3>
<%= render partial: '/comments/comments', locals: { commentable: @event}  %>
</div>
</div>





