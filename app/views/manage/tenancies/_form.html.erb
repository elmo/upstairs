<%= simple_form_for([:manage,@unit, @tenancy]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id  do %> 
	    <%= f.select :user_id, @building.memberships.collect {
		    |membership| [ "#{membership.user.email} (#{membership.membership_type})", membership.user_id ]
	    } -%>
    <% end %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Rent to user" %>
  </div>

<% end %>
