<h2>Events</h2>

<%= render partial: '/manage/events/search_summary' %>

<% if @events.empty? %>
  <% if params[:searchTextField].blank? %>
    <p>There are no events configured for this building.</p>
  <% else %>
     <p>There are no events matching your search.</p>
  <% end %>
<%  else %>
<%= render partial: 'summary' -%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
	 <td> 
          <%= event.title %>
	  <%= link_to 'view',   manage_event_path(event.id) %> 
	  <%= link_to 'manage', manage_event_path(event.id) %> 
	</td> 
	 <td><%= event.building.address %></td>
	 <td><%= event.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= paginate(@events) %>
</p>

<% end %>
