<%= simple_form_for([:manage, @ticket]) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :building_id, 
	 collection: current_user.owned_and_managed_properties.collect { |b| [b.address, b.id] }, 
	 selected: @building
    %>
    <%= f.input :severity, collection: Ticket.severities %>
    <%= f.input :status, collection: Ticket.statuses %>
    <%= f.input :photos, as: :attachinary %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
