<h1>Listing Verifications</h1>

<% if @verifications.any? %>
<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verifications.each do |verification| %>
      <tr>
        <td><%= verification.building.name %></td>
        <td><%= verification.user.email %></td>
        <td><%= link_to 'Revoke', verification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>There are no verifications in the system.</p>
<% end %>

<br>

