<p id="notice"><%= notice %></p>

<h1>Listing Verification Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Building</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verification_requests.each do |verification_request| %>
      <tr>
        <td><%= verification_request.user_id %></td>
        <td><%= verification_request.building_id %></td>
        <td><%= verification_request.status %></td>
        <td><%= link_to 'Show', verification_request %></td>
        <td><%= link_to 'Edit', edit_verification_request_path(verification_request) %></td>
        <td><%= link_to 'Destroy', verification_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

