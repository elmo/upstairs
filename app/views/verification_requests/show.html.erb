<h1>Verfication Request</h1>

<p>
  <strong>User:</strong>
  <%= @verification_request.user.email %>
</p>

<p>
  <strong>Building:</strong>
  <%= @verification_request.building.name  %>
</p>

<p>
  <strong>Status:</strong>
  <%= @verification_request.status %>
</p>

<p>
<% if !@verification_request.approved? %>
<%= link_to 'Approve', new_verification_request_verification_path(@verification_request) %>
<% else %>
<%= link_to 'Revoke', revoke_verification_path(@verification_request), method: :put %>
<% end %>
</p>

<p><%= link_to 'All verification requests', verification_requests_path %></p>
